<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<!-- Ресурсы для светлой темы -->
	<Color x:Key="BackgroundColor">#F8F9FA</Color>
	<Color x:Key="SurfaceColor">#FFFFFF</Color>
	<Color x:Key="TextPrimaryColor">#333333</Color>
	<Color x:Key="TextSecondaryColor">#666666</Color>
	<Color x:Key="BorderColor">#E0E0E0</Color>
	<Color x:Key="ShadowColor">#10000000</Color>

	<SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
	<SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
	<SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
	<SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
	<SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
	<SolidColorBrush x:Key="ShadowBrush" Color="{StaticResource ShadowColor}"/>

	<LinearGradientBrush x:Key="SidebarGradient" StartPoint="0%,0%" EndPoint="0%,100%">
		<GradientStop Offset="0" Color="#00ACC1"/>
		<GradientStop Offset="1" Color="#008999"/>
	</LinearGradientBrush>

	<Color x:Key="AvatarBackgroundColor">#9575CD</Color>
	<Color x:Key="DialogBackgroundColor">#FFFFFF</Color>
	<Color x:Key="DialogBorderColor">#E0E0E0</Color>
	<Color x:Key="ConfirmDeleteButtonColor">#F44336</Color>
	<Color x:Key="CancelButtonColor">#E0E0E0</Color>
	<Color x:Key="HoverBrushColor">#F5F5F5</Color>
	<Color x:Key="AlternateRowColor">#F9FAFB</Color>
	<SolidColorBrush x:Key="AlternateRowBrush" Color="{StaticResource AlternateRowColor}"/>

	<SolidColorBrush x:Key="AvatarBackgroundBrush" Color="{StaticResource AvatarBackgroundColor}"/>
	<SolidColorBrush x:Key="DialogBackgroundBrush" Color="{StaticResource DialogBackgroundColor}"/>
	<SolidColorBrush x:Key="DialogBorderBrush" Color="{StaticResource DialogBorderColor}"/>
	<SolidColorBrush x:Key="ConfirmDeleteButtonBrush" Color="{StaticResource ConfirmDeleteButtonColor}"/>
	<SolidColorBrush x:Key="CancelButtonBrush" Color="{StaticResource CancelButtonColor}"/>
	<SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverBrushColor}"/>
</ResourceDictionary>